# Environment
NODE_ENV=development
LOG_LEVEL=info

# Harbor Environment (local, staging, production)
HARBOR_ENV=local

# Database Configuration
# Local: Docker PostgreSQL
# Staging/Production: Cloud SQL connection string
DATABASE_URL_USER=postgresql://harbor:harbor_dev_password@localhost:5432/harbor_user
DATABASE_URL_WALLET=postgresql://harbor:harbor_dev_password@localhost:5432/harbor_wallet
DATABASE_URL_TENDERING=postgresql://harbor:harbor_dev_password@localhost:5432/harbor_tendering
DATABASE_URL_SETTLEMENT=postgresql://harbor:harbor_dev_password@localhost:5432/harbor_settlement

# Fallback DATABASE_URL (used if service-specific URL not set)
DATABASE_URL=postgresql://harbor:harbor_dev_password@localhost:5432/harbor_user

# Database Migration
# Auto-run migrations on startup (true for local, false for staging/production)
DB_AUTO_MIGRATE=true

# Circle API (for wallet management)
CIRCLE_API_KEY=your_circle_api_key
CIRCLE_ENTITY_SECRET=your_entity_secret
CIRCLE_WALLET_SET_ID=default
CIRCLE_USDC_TOKEN_ID=bdf128b4-827b-5267-8f9e-243694989b5f

# Stripe API (for fiat onramp/offramp)
STRIPE_API_KEY=your_stripe_api_key
STRIPE_WEBHOOK_SECRET=your_stripe_webhook_secret

# Provider Configuration
USE_REAL_PROVIDERS=false

# Platform Fees (percentage as decimal, e.g., 0.025 = 2.5%)
FEE_BUYER_PERCENTAGE=0.025
FEE_SELLER_PERCENTAGE=0.025

# Platform Wallet Agent IDs (deterministic UUIDs for platform agents)
ESCROW_AGENT_ID=00000000-0000-0000-0000-000000000001
REVENUE_AGENT_ID=00000000-0000-0000-0000-000000000002

# Service ports (defaults defined in libs/config/src/ports.ts)
# PORT=3000  # Override specific service port if needed
